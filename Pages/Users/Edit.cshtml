@page
@model VPM.Pages.Users.EditModel
@{
    ViewData["Title"] = "User | Edit";
}

<h1>Edit User</h1>
<hr />
<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ApplicationUser.FullName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ApplicationUser.FullName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ApplicationUser.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ApplicationUser.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ApplicationUser.Created)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ApplicationUser.Created)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ApplicationUser.Building.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ApplicationUser.Building.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ApplicationUser.Building.Address)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ApplicationUser.Building.Address)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ApplicationUser.Unit)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ApplicationUser.Unit)
        </dd>
    </dl>
</div>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ApplicationUser.Id" />
            <div class="form-group">
                <label asp-for="Input.Unit"></label>
                <input asp-for="Input.Unit" class="form-control" value="@Model.ApplicationUser.Unit"/>
                <span asp-validation-for="Input.Unit" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Building</label>
                <select asp-for="Input.SelectedBuildingId" asp-items="Model.BuildingOptions" class="form-control"></select>
            </div>
            <div class="form-group">
                <label>Role</label>
                <select asp-for="Input.SelectedRoleName" asp-items="Model.RoleOptions" class="form-control"></select>
            </div>
            <hr />
            <div class="form-group">
                <input type="submit" value="Submit" class="btn btn-primary" /> |
                <a asp-page="./Index">
                    <input type="button" value="Back to List" class="btn btn-dark" />
                </a>
            </div>
        </form>
    </div>
</div>