@{
}
@model VPM.ViewComponents.ReservationFilterViewComponents


    <form method="post">
        
        <div class="form-row bg-light navbar navbar-expand-lg navbar-light">
            <div class="col-1">
                <h5>Filters:</h5>
            </div>

            @if (Model.AvailableInputs.ByUnit)
            {
                <div class="col-1">
                    <input asp-for="Query.Unit" class="form-control" placeholder="@Html.DisplayNameFor(model => model.Query.Unit)" />
                </div>
            }

            @if (Model.AvailableInputs.ByVehiclePlateNumber)
            {
                <div class="col-2">
                    <input asp-for="Query.VehiclePlateNumber" class="form-control" placeholder="@Html.DisplayNameFor(model => model.Query.VehiclePlateNumber)" />
                </div>
            }

            @if (Model.AvailableInputs.ByBuilding)
            {
                <div class="col-3">
                    <label>Building</label>
                    <select asp-for="Query.BuildingId" asp-items="Model.BuildingOptions" class="form-control"></select>
                </div>
            }

            @if (Model.AvailableInputs.ByValidity)
            {
                <div class="col-3">
                    <label class="form-check-label">
                        <input class="form-co-input" asp-for="Query.ShowExpired" /> @Html.DisplayNameFor(model => model.Query.ShowExpired)
                    </label>
                </div>
            }

            <div class="col-5">
                <input type="submit" value="Apply Filters" class="btn btn-primary" /> |
                <a asp-page="../Admin/Users">
                    <input type="button" value="Reset" class="btn btn-dark" />
                </a>
            </div>

        </div>
    </form>