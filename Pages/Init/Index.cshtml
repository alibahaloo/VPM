@page
@model VPM.Pages.Init.IndexModel
@{
    ViewData["Title"] = "Index";
}

<h1>Application Initialization</h1>
<hr />
<div asp-validation-summary="ModelOnly" class="text-danger"></div>
@{
    if (!Model.Error)
    {
        <a asp-page="../Index">Exit</a>
    }
    else
    {
        <form method="post">
            <div class="row">
                <div class="col-md-6">
                    <h4>Create Admin Credentials:</h4>
                    <div class="form-group">
                        <label asp-for="Input.Email" class="control-label"></label>
                        <input asp-for="Input.Email" class="form-control" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.Password" class="control-label"></label>
                        <input asp-for="Input.Password" class="form-control" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <h4>Enter Master Password</h4>
                    <div class="form-group">
                        <label asp-for="Input.MasterPassword" class="control-label"></label>
                        <input asp-for="Input.MasterPassword" class="form-control" />
                        <span asp-validation-for="Input.MasterPassword" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <span>Note: This will create a default building and add the admin user to it.</span>
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Begin Initialization" class="btn btn-primary" />
                    </div>
                </div>
            </div>
        </form>
    }
}




@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

@Html.ValidationMessage("CustomError")