@page
@model VPM.Pages.Reservations.DeleteModel

@{
    ViewData["Title"] = "Reservation | Delete";
}

<h1>Delete Reservation</h1>
<h3>Are you sure you want to delete this reservation?</h3>
<hr />
<div>
    <dl class="row">
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Reservation.VehiclePlateNumber)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Reservation.VehiclePlateNumber)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Reservation.StartTime)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Reservation.StartTime)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Reservation.EndTime)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Reservation.EndTime)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Reservation.ApplicationUser)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Reservation.ApplicationUser.FullName)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Reservation.Building)
        </dt>
        <dd class="col-sm-9">
            <span>@Html.DisplayFor(model => model.Reservation.Building.Name)</span> (<span>@Html.DisplayFor(model => model.Reservation.Building.Address)</span>)
        </dd>
    </dl>
    <hr />
    <div>
        <form method="post">
            <input type="hidden" asp-for="Reservation.Id" />
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <a asp-page="./Index">
                <input type="button" value="Back to List" class="btn btn-dark" />
            </a>
        </form>
    </div>


</div>
